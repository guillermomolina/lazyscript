{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "antlr-debug",
            "name": "Debug ANTLR4 grammar Current File",
            "request": "launch",
            "input": "${file}",
            "grammar": "language/src/main/antlr4/com/guillermomolina/lazyscript/parser/LazyScriptParser.g4",
            "startRule": "module",
            "printParseTree": true,
            "visualParseTree": true
        },
        {
            "type": "java",
            "name": "Debug (Launch) Current File",
            "request": "launch",
            "mainClass": "com.guillermomolina.lazyscript.launcher.LSMain",
            "projectName": "launcher",
            "args": ["--log.lazyscript.level=FINEST","${file}"],
            "vmArgs": [
                "-ea",
                "-Dtruffle.class.path.append=./language/target/lazyscript.jar"
            ],
            "stepFilters": {
                "skipClasses": [
                    "$JDK",
                    "junit.*"
                ],
                "skipSynthetics": true,
                "skipStaticInitializers": true,
                "skipConstructors": false
            },
            "console": "internalConsole"
        },
        {
            "type": "java",
            "name": "Debug (Launch) LSMain Inlining.ls",
            "request": "launch",
            "mainClass": "com.guillermomolina.lazyscript.launcher.LSMain",
            "projectName": "launcher",
            "args": [
                "--log.lazyscript.level=FINEST",
                "${workspaceFolder}/language/tests/Inlining.ls",
            ],
            "vmArgs": [
                "-ea",
                "-Dtruffle.class.path.append=./language/target/lazyscript.jar"
            ],
            "stepFilters": {
                "skipClasses": [
                    "$JDK",
                    "junit.*"
                ],
                "skipSynthetics": true,
                "skipStaticInitializers": true,
                "skipConstructors": false
            },
            "console": "internalConsole"
        },
        {
            "type": "java",
            "name": "Debug (Launch and Wait) Current File",
            "request": "launch",
            "mainClass": "com.guillermomolina.lazyscript.launcher.LSMain",
            "projectName": "launcher",
            "args": [
                "--inspect",
                "--log.lazyscript.level=FINEST",
                "${file}"
            ],
            "vmArgs": [
                "-ea",
                "-Dtruffle.class.path.append=./language/target/lazyscript.jar"
            ],
            "stepFilters": {
                "skipClasses": [
                    "$JDK",
                    "junit.*"
                ],
                "skipSynthetics": true,
                "skipStaticInitializers": true,
                "skipConstructors": false
            },
            "console": "internalConsole"
        },
        {
            "type": "graalvm",
            "request": "launch",
            "name": "Launch LazyScript Current File",
            "runtimeExecutable": "/home/guille/Fuentes/graal/languages/lazyscript/lazy",
            "program": "${file}"
        },
        {
            "type": "graalvm",
            "request": "attach",
            "name": "GraalVM Attach",
            "port": 9229
        }
    ],
    "compounds": [
        {
            "name": "Debug LazyScript + Attach",
            "configurations": [
                "Debug (Launch and Wait) Current File",
                "GraalVM Attach"
            ]
        }
    ]
}